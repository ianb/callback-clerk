{
  "manifest_version": 3,
  "name": "Callback Clerk",
  "version": "0.0.1",
  "description": "Browser companion for callback-box",
  "permissions": ["tabs", "storage", "sidePanel", "alarms", "contextMenus", "notifications", "scripting", "activeTab"],
  "icons": {
    "16": "src/assets/icon-128.png",
    "128": "src/assets/icon-128.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  }
}
